import java.util.ArrayList;
import java.util.Collections;
import java.util.LinkedList;
import java.util.List;

public class DominionBoard {
	List<Card> buyCards;
	
	int num_Duchy;
	int num_Estate;
	int num_Province;
	int num_Curse;
	int num_Gold;
	int num_Silver;
	int num_Cooper;
	
	public void initialize(){
		this.num_Duchy = 8;
		this.num_Estate = 8;
		this.num_Province = 8;
		this.num_Curse = 10;
		this.num_Gold = 30;
		this.num_Silver = 40;
		this.num_Cooper = 46;
		buyCards = new ArrayList<Card>(Card.addAllCards());
	}
	public void printBoard(){
		for (Card card:this.buyCards)
			System.out.print(card.toStringShort());
	}
}
